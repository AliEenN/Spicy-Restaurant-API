<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpicyRestaurant.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* Add Bootstrap Icons Lib *@
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />

    @* Add Animate.css Lib *@
    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SpicyRestaurant.UI.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <label class="text-info" style="cursor:pointer">
                        Spicy
                    </label>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                Content Managment
                            </a>
                            <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-secondary" asp-area="Admin" asp-controller="Categories" asp-action="Index">Category</a>
                                <a class="dropdown-item text-secondary" asp-area="Admin" asp-controller="SubCategories" asp-action="Index">Sub Category</a>
                                <a class="dropdown-item text-secondary" asp-area="Admin" asp-controller="MenuItems" asp-action="Index">Menu Item</a>
                                <a class="dropdown-item text-secondary" asp-area="Admin" asp-controller="Coupons" asp-action="Index">Coupons</a>
                                <a class="dropdown-item text-secondary" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* *** ***** Custom Boostsrap Modal ***** *** *@
    <div class="modal" tabindex="-1" id="form-modal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    
                </div>

            </div>
        </div>
    </div>

    <footer class="border-top footer text-white-50 bg-dark">
        <div class="container">
            &copy; 2022 - SpicyRestaurant.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* Add Bootbox.js Lib *@
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @* To Using NToastNotify Package *@
    @await Component.InvokeAsync("NToastNotify")
</body>
</html>
